<!DOCTYPE html>
<html lang="en">
    <!-- Header Partials -->
    <%- include('./partials/header.ejs') %> 


<body>
    <header class="header">
        <div class="header-container">
            <h2 class="header-heading">Taofiq Smoothies</h2>
            <ul class="header-list">
                <li class="header-item">
                    <a href="/login" class="header-link">Log in</a>
                </li>
                <li class="header-item">
                    <a href="/signup" class="header-link">Sign Up</a>
                </li>
            </ul>
        </div>
    </header>


            <form action="" class="form">
                <h1>Sign Up</h1>
                <label for="username">Username:</label>
                <input type="text"  name="username" class="input-user">
                <div class="username error"></div>
                <label for="email">Email:</label>
                <input type="email" name="email" class="input-email">
                <div class="email error"></div>
                <label for="password">Password:</label>
                <input type="password"  name="password" class="input-password">
                <div class="password error"></div>
                <button class="section-btn">Sign Up</button>
            </form>

            <!-- create a script to grab the DOM form elements  -->

            <script>
                // grab the form
                const form  = document.querySelector('form');
                const usernameError = document.querySelector('.username.error');
                const emailError = document.querySelector('.email.error');
                const passwordError = document.querySelector('.password.error');

                
                
                // attach event listener

                form.addEventListener('submit', async (e) => {
                    e.preventDefault();

                    // resert error value
                    usernameError.textContent = ''
                    emailError.textContent = ''
                    passwordError.textContent = ''
                    // get the values 
                    const username = form.username.value;
                    const password = form.password.value;
                    const email = form.email.value;
                    
                    //console.log(username, password, email);
                    try{
                        const res = await fetch('/signup', {
                            method: 'POST',
                            body: JSON.stringify({username, email, password}),
                            headers: {'Content-Type': 'application/json'}
                        })
                        const data = await res.json();
                        console.log(data);
                        if(data.error) {
                            usernameError.textContent = data.error.username;
                            emailError.textContent = data.error.email;
                            passwordError.textContent = data.error.password;
                        }
                        if(data.user) {
                            location.assign('/')
                        }
                    }catch(err) {
                        console.error(err);
                    }
                })


            </script>
    <!-- footer partials -->
    <%- include('./partials/footer.ejs') %> 
</body>
</html>